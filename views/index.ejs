<% include ./partials/header %>
<div class="ui main text container">
    <div class="ui huge header">
        <h1>RESTful Blog APP</h1>
    </div>
    <div class="ui image six wide">
        <img src="/img/nathan-anderson-GM5Yn5XRVqA-unsplash.jpg" alt="">
    </div>

    <div class="ui top attached red segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <a href="/blogs/<%=blog._id%>" class="ui medium image">
                            <img src="<%=blog.image%>>" alt="">
                        </a>
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 50) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated violet button" href="/blogs/<%=blog._id%>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>


<% include ./partials/footer %>